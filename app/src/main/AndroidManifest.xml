<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.katkov.training_starwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.movie.list.MovieListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.movie.details.MovieActivity"/>
        <activity android:name=".ui.character.details.CharacterActivity"/>
        <activity android:name=".ui.planet.details.PlanetActivity"/>
        <activity android:name=".ui.favorites.FavoritesActivity"/>
    </application>

</manifest>